<h1>Employee List</h1>


<h2>Title: <%= @employee.job_title %></h2>
<h3>Name: <%= @employee.full_name %></h3>
<p>Email:<%= @employee.email %> Phone:<%= @employee.phone_number%></p>
<h3>Salary $<%= @employee.salary %> Gender: <%= @employee.gender %>
  
<h5>Last Updated On: <%= @employee.friendly_updated_at %></h5>
<%= link_to "Home", "/" %>
<%= link_to "Edit", "/employees/#{@employee.id}/edit" %>
<%= link_to "Delete", "/employees/#{@employee.id}", method: :delete,
data:{confirm: "Are you sure you want to delete this employee?"} %>